{
    "name": "amethyst/api",
    "keywords": ["laravel"],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "railken/bag": "^1.2",
        "railken/lem": "3.2.*",
        "league/fractal": "^0.17.0",
        "railken/lara-eye": "1.3.*",
        "railken/eloquent-mapper": "0.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.1",
        "orchestra/testbench": "3.6.*"
    },
    "autoload": {
        "psr-4" : {
            "Amethyst\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Amethyst\\Tests\\": "tests/",
            "": "tests/laravel" 
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Amethyst\\Providers\\ApiServiceProvider"
            ]
        }
    }
}
